{
    "name": "firehub/core",
    "description": "FireHub Web Application Framework",
    "type": "library",
    "keywords": ["php", "framework", "core", "firehub"],
    "homepage": "https://the-firehub-project.github.io/",
    "license": "OSL-3.0",
    "require": {
        "php": ">=8.2",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "ext-openssl": "*"
