    "suggest": {
        "php-64bit": ">=8.2"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Danijel GaliÄ‡",
            "email": "danijel.galic@outlook.com",
            "homepage": "https://github.com/dieselxxx",
            "role": "Owner"
        }
    ],
    "support": {
        "email": "danijel.galic@outlook.com",
        "issues": "https://github.com/The-FireHub-Project/FireHub/issues",
        "forum": "https://github.com/orgs/The-FireHub-Project/discussions",
        "wiki": "https://github.com/The-FireHub-Project/FireHub/wiki",
        "source": "https://github.com/The-FireHub-Project/FireHub",
        "docs": "https://the-firehub-project.github.io/core/"
    },
    "funding": [
        {
            "type": "patreon",
            "url": "https://www.patreon.com/firehub"
        }
    ],
    "config": {
        "process-timeout": 300,
        "preferred-install": {
            "*": "dist"
